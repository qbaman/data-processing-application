@model FBZSystemMvc.Models.ComicDetailsViewModel

@{
    ViewData["Title"] = "Comic Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">@Model.Comic.MainTitle</h1>

    <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Comic.MainTitle</dd>

            <dt class="col-sm-3">Authors</dt>
            <dd class="col-sm-9">
                @(Model.AuthorsDisplay.Count == 0 ? "—" : string.Join(", ", Model.AuthorsDisplay))
            </dd>

            <dt class="col-sm-3">Publication years</dt>
            <dd class="col-sm-9">
                @(Model.YearsDisplay.Count == 0 ? "—" : string.Join(", ", Model.YearsDisplay))
            </dd>

            <dt class="col-sm-3">Genres</dt>
            <dd class="col-sm-9">
                @(Model.GenresDisplay.Count == 0 ? "—" : string.Join(", ", Model.GenresDisplay))
            </dd>

            <dt class="col-sm-3">ISBNs</dt>
            <dd class="col-sm-9">
                @(Model.IsbnsDisplay.Count == 0 ? "missing" : string.Join(", ", Model.IsbnsDisplay))
            </dd>
        </dl>
    </div>
</div>

@if (Model.InfoLines is not null && Model.InfoLines.Count > 0)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Metadata</h5>
            <ul class="mb-0">
                @foreach (var line in Model.InfoLines)
                {
                    <li>@line</li>
                }
            </ul>
        </div>
    </div>
}

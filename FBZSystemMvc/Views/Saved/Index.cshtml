@using System
@using System.Linq
@model FBZSystemMvc.Models.Saved.SavedListViewModel

@{
    ViewData["Title"] = "Saved Comics";
    var items = Model?.Items ?? new List<FBZSystemMvc.Persistence.Entities.SavedComic>();
}

<h1>Saved Comics</h1>

@if (!items.Any())
{
    <p>You have no saved comics yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Comic ID</th>
                <th>Saved (UTC)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var s in items)
        {
            <tr>
                <td>
                    <a asp-controller="Dataset" asp-action="Details" asp-route-id="@s.ComicId">@s.ComicId</a>
                </td>
                <td>@s.SavedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-end">
                    <form asp-action="Remove" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@s.ComicId" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <form asp-action="ImportFromSession" method="post">
        <button type="submit" class="btn btn-outline-secondary">Import current session list</button>
    </form>
}